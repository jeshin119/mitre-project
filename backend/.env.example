# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vintage_market
DB_USER=root
DB_PASSWORD=password

# MongoDB Configuration (for chat/logs)
MONGODB_URI=mongodb://localhost:27017/vintage_market

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security Configuration (intentionally weak for educational purposes)
BCRYPT_ROUNDS=1
SESSION_SECRET=weak_session_secret
COOKIE_SECURE=false

# External APIs
PAYMENT_API_KEY=test_payment_key
MAPS_API_KEY=test_maps_key

# Vulnerable Configurations (DO NOT USE IN PRODUCTION)
ENABLE_SQL_INJECTION=true
ENABLE_XSS=true
ENABLE_CSRF=false
DISABLE_RATE_LIMITING=true
ALLOW_UNSAFE_UPLOADS=true